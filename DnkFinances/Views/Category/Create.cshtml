@using DnkFinances.Enums

@model DnkFinances.Models.TransactionCategory

@{
    ViewData["Title"] = "Create";
}
<section class="mt-5">
  <div class="container-fluid">
    <div class="row">
      @* <div class="col-md-12 fw-bold fs-5">@ViewData["Title"]</div> *@
    </div>

    <div class="row mt-4">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <form method="post" action="@Url.Action("Create", "Category")">

              <div class="row">
                <div class="col-12">
                  <label asp-for="Title" class="form-label">Title</label>
                  <input asp-for="Title" class="form-control">
                  <span asp-validation-for="Title" class="text-danger"></span>
                </div>
              </div>

              @Html.HiddenFor(model => model.Type)

              <div class="row">
                <div class="col-md-3">
                  <button type="submit" class="btn btn-success mt-4 form-control">Criar</button>
                </div>
                <div class="col-md-3">
                  <a asp-controller="Category" asp-action="Index" class="btn btn-primary mt-4 form-control">Voltar para Categorias</a>
                </div>
              </div>
            </form>
            
          </div>
        </div>

      </div>
    </div>
  </div>
    
</section>

@section Scripts{
  @{
      <partial name="_ValidationScriptsPartial"/>
  }
}