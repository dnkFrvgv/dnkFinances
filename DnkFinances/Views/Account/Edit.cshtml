@model DnkFinances.Models.Account
@{
    ViewData["Title"] = "Edit";
}
<section class="mt-5">
  <div class="container-fluid">
    <div class="row">
      @* <div class="col-md-12 fw-bold fs-5">@ViewData["Title"]</div> *@
    </div>

    <div class="row mt-4">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <form method="post">
              <div class="row">
                <div class="col-12">
                  
                  <label asp-for="Name" class="form-label">Nome</label>
                  <input asp-for="Name" class="form-control">
                  <span asp-validation-for="Name" class="text-danger"></span>
                </div>
              </div>

              <div class="row">
                <div class="col-md-3">
                  <button type="submit" class="btn btn-success mt-4 form-control">Atualizar</button>
                </div>
                <div class="col-md-3">
                  <a asp-controller="Account" asp-action="Index" class="btn btn-primary mt-4 form-control">Voltar para Contas</a>
                </div>
              </div>
            </form>
            
          </div>
        </div>

      </div>
    </div>
  </div>
    
</section>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}