@model DnkFinances.Models.ViewModels.TransactionViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<section class="mt-5">
  <div class="container-fluid">
    <div class="row">
      @* <div class="col-md-12 fw-bold fs-5">@ViewData["Title"]</div> *@
    </div>

    <div class="row mt-4">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <form method="post" action="@Url.Action("Create", "Transaction")">

              
              <div class="row">
                <div class="col-6">
                  <label asp-for="Title" class="form-label">Titulo</label>
                  <input asp-for="Title" class="form-control">
                  <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="col-6">
                  <label asp-for="Description" class="form-label">Descrição</label>
                  <input asp-for="Description" class="form-control">
                  <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                
              </div>

              <div class="row">
                <div class="col-6">
                    <label class="form-label">Selectione uma conta</label>
                    <select class="form-select" asp-items="Model.AccountSelectList" asp-for="SelectedAccountOption"></select>
                </div>

                <div class="col-6">
                    <label class="form-label">Selectione uma categoria</label>
                    <select class="form-select" asp-items="Model.CategorySelectList" asp-for="SelectedCategoryOption"></select>
                </div>
              </div>

              <div class="row">
                


                 
              <div class="col-6">
                    <label class="form-label">Selectione o status</label>
                    <select class="form-select" asp-items="Model.StatusSelectList" asp-for="SelectedStatusOption"></select>
                </div>


                <div class="col-6">
                  <label asp-for="Amount" class="form-label">Valor</label>
                  <input asp-for="Amount" class="form-control">
                  <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                

                @* status *@

                
              </div>

              <div class="row">
                <div class="col-6">
                  <label asp-for="Date" class="form-label">Data</label>
                  <input asp-for="Date" class="form-control">
                  <span asp-validation-for="Date" class="text-danger"></span>
                </div>

              </div>

              @Html.HiddenFor(model => model.Type)

              <div class="row">
                <div class="col-md-3">
                  <button type="submit" class="btn btn-success mt-4 form-control">Criar</button>
                </div>
                <div class="col-md-3">
                  <a asp-controller="Category" asp-action="Index" class="btn btn-primary mt-4 form-control">Voltar para Categorias</a>
                </div>
              </div>
            </form>
            
          </div>
        </div>

      </div>
    </div>
  </div>
    
</section>

@section Scripts{
  @{
      <partial name="_ValidationScriptsPartial"/>
  }
}